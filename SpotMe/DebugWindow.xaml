<Window x:Class="SpotMe.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotMe"
        mc:Ignorable="d"
        Title="DebugWindow" Height="500" Width="700">
    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="outputDataLabel" Content="Start" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Top"/>
        <TextBox x:Name="inputDataBox" Height="22" Grid.Row="1" TextWrapping="Wrap" Text="testData.csv" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button1" Grid.Row="2" Content="Button1" Width="120" Click="Button1_Function"></Button>
        <Button x:Name="Button2" Grid.Row="3" Content="Button2" Width="120" Click="Button2_Function"></Button>
        <Button x:Name="Button3" Grid.Row="4" Content="Button3" Width="120" Click="Button3_Function"></Button>



    </Grid>
</Window>
